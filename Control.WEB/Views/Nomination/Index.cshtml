@model IEnumerable<NominationVM>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-info pl-3">Nominations list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Nomination" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i>
            </a>
        </div>
    </div>
</div>

<br />
<br />

@if (Model.Count()>0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>                    
                    <td class="text-center">
                        <div class="w-25 btn-group" role="group">
                            <a asp-controller="Nomination" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="post" asp-controller="Nomination" asp-action="Delete" asp-route-id="@item.Id">
                                <input type="submit" class="btn btn-danger w-100" value="Delete" />
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

else
{
    <p>Nominations list is empty</p>
}