@model OwnerVM
<br />
<form method="post" asp-controller="Owner" asp-action="Update" class="needs-validation" novalidate>
    <input asp-for="Id" hidden />
    <div class="row mb-3">
        <label asp-for="Shop" class="col-sm-2 col-form-label text-end"></label>
        <div class="col-sm-4">
            <input asp-for="Shop" class="form-control" required />
            <div class="valid-feedback">
                Nice
            </div>
            <div class="invalid-feedback">
                Field must be required
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Production" class="col-sm-2 col-form-label text-end"></label>
        <div class="col-sm-4">
            <input asp-for="Production" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Master" class="col-sm-2 col-form-label text-end"></label>
        <div class="col-sm-4">
            <input asp-for="Master" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Phone" class="col-sm-2 col-form-label text-end"></label>
        <div class="col-sm-4">
            <input asp-for="Phone" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Email" class="col-sm-2 col-form-label text-end"></label>
        <div class="col-sm-4">
            <input asp-for="Email" class="form-control" />
            <div class="invalid-feedback">
                example@post.com
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-6 text-end">
            <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                <button type="submit" class="btn btn-outline-success">
                    <i class="bi bi-check-lg"></i>
                </button>
                <a asp-controller="Owner" asp-action="Index" class="btn btn-outline-danger">
                    <i class="bi bi-box-arrow-left"></i>
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}