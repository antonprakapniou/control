@model IEnumerable<OwnerVM>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-info pl-3">Owners list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Owner" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i>
            </a>
        </div>
    </div>
</div>

<br />
<br />

@if (Model.Count()>0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Shop
                </th>
                <th>
                    Production
                </th>
                <th>
                    Master
                </th>
                <th>
                    Phone
                </th>
                <th>
                    Email
                </th>
                <th>@* Keep this empty *@</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Shop
                    </td>
                    <td>
                        @item.Production
                    </td>
                    <td>
                        @item.Master
                    </td>
                    <td>
                        @item.Phone
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td class="text-center">
                        <div class="w-25 btn-group" role="group">
                            <a asp-controller="Owner" asp-action="Update" asp-route-id="@item.OwnerId" class="btn btn-primary mx-2">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="post" asp-controller="Owner" asp-action="Delete" asp-route-id="@item.OwnerId">
                                <input type="submit" class="btn btn-danger w-100" value="Delete" />
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

else
{
    <p>Owners list is empty</p>
}