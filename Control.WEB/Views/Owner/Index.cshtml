@model IEnumerable<OwnerVM>
<br />
<table class="table table-responsive table-dark table-hover table-sm align-middle" style="width:100%">
    <thead>
        <tr>
            <th class="text-start align-middle">
                <div class="col-12">
                    <a asp-controller="Owner" asp-action="Create" class="btn btn-dark">
                        <i class="bi bi-plus-lg"></i>&nbsp;Shop
                    </a>
                </div>
            </th>
            <th class="text-center align-middle">Code</th>
            <th class="text-center align-middle">Master</th>
            <th class="text-center align-middle">Master phone</th>
            <th class="text-center align-middle">Shop phone</th>
            <th class="text-center align-middle" style="width:11%"><i class="bi bi-gear-wide-connected"></i></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count()>0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-start align-middle">@item.ShortName</td>
                    <td class="text-center">@item.ShopCode</td>
                    @if (item.MasterId is not null) {<td class="text-center">@item.Master!.UserName</td>}     
                    @if (item.MasterId is not null) {<td class="text-center">@item.Master!.PhoneNumber</td>}   
                    <td class="text-center">@item.Phone</td>
                    <td class="text-center">
                        <div class="btn-toolbar justify-content-between" role="toolbar">
                            <a asp-controller="Owner" asp-action="Info" asp-route-id="@item.Id" class="btn btn-outline-info">
                                <i class="bi bi-info-lg"></i>
                            </a>
                            <a asp-controller="Owner" asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-warning">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                            <form method="post" asp-controller="Owner" asp-action="Delete" asp-route-id="@item.Id">
                                <button type="submit" class="btn btn-outline-danger">
                                    <i class="bi bi-trash3"></i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        }

        else
        {
            <tr>
                <td colspan="6">Owner list is empty</td>
            </tr>
        }
    </tbody>
</table>