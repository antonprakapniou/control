@model IEnumerable<PositionVM>
<br />
<table class="table table-responsive table-dark table-hover align-middle" style="width:100%">
    <thead>
        <tr>
            <th class ="text-center align-middle">
                <div class="col-12 text-start">
                    <a asp-controller="Position" asp-action="Create" class="btn btn-dark">
                        <i class="bi bi-plus-lg"></i>
                    </a>
                </div>
            </th>
            <th class="text-center align-middle">FactoryNumber</th>
            <th class="text-center align-middle">Owner</th>
            <th class="text-center align-middle">Period</th>
            <th class="text-center align-middle">PreviousDate</th>
            <th class="text-center align-middle">Status</th>
            <th class="text-center align-middle">Operation</th>
            <th class="text-center align-middle">Category</th>
            <th class="text-center align-middle"><i class="bi bi-gear-wide-connected"></i></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count()>0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center align-middle">@item.DeviceType</td>
                    <td class="text-center align-middle">@item.FactoryNumber</td>
                    <td class="text-center align-middle">@if (item.Owner != null){@item.Owner!.Shop @item.Owner!.Production}</td>
                    <td class="text-center align-middle">@if (item.Period is not null)@item.Period.Name</td>
                     <td class="text-center align-middle">@item.PreviousDate.ToShortDateString()</td>
                    <td class="text-center align-middle">@item.Status</td>
                    <td class="text-center align-middle">@if (item.Operation is not null)@item.Operation.Name</td>
                    <td class="text-center align-middle">@if (item.Category is not null)@item.Category.Name</td>
                     <td class="text-center align-middle">
                        <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                            <a asp-controller="Position" asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-info">
                                <i class="bi bi-pencil-fill"></i>
                            </a>                            
                            <a asp-controller="Position" asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-warning">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                            <form method="post" asp-controller="Owner" asp-action="Delete" asp-route-id="@item.Id">
                                <button type="submit" class="btn btn-outline-danger">
                                    <i class="bi bi-trash3"></i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        }

        else
        {
            <tr>
                <td colspan="9">Position list is empty</td>
            </tr>
        }
    </tbody>
</table>