@model IEnumerable<PeriodVM>
<br />
<table class="table table-responsive table-dark table-hover table-sm align-middle" style="width:100%">
    <thead>
        <tr>
            <th style="width:10%">
                <div class="col-12 text-start">
                    <a asp-controller="Period" asp-action="Create" class="btn btn-dark">
                        <i class="bi bi-plus-lg"></i>&nbsp;Period
                    </a>
                </div>
            </th>
            <th style="width:80%"></th>
            <th class="text-center align-middle" style="width:8% "><i class="bi bi-gear-wide-connected"></i></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count()>0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@item.Name</td>
                    <td></td>
                    <td class="text-center">
                        <div class="btn-toolbar justify-content-between" role="toolbar">
                            <a asp-controller="Period" asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-warning">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                            <form method="post" asp-controller="Period" asp-action="Delete" asp-route-id="@item.Id">
                                <button type="submit" class="btn btn-outline-danger">
                                    <i class="bi bi-trash3"></i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        }

        else
        {
            <tr>
                <td colspan="3">Period list is empty</td>
            </tr>
        }
    </tbody>
</table>